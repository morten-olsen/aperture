      "tag": "Conversations",
      "input": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Conversation ID to delete"
          },
          "userId": {
            "type": "string",
            "description": "User ID"
          }
        },
        "required": [
          "id",
          "userId"
        ],
        "additionalProperties": false
      },
      "output": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "deleted": {
            "type": "boolean"
          }
        },
        "required": [
