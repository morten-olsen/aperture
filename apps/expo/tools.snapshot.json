        ],
        "additionalProperties": false
      }
    },
    {
      "id": "conversation.get",
      "description": "Get a conversation by ID including its prompt history",
      "tag": "Conversations",
      "input": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Conversation ID"
          },
          "userId": {
            "type": "string",
            "description": "User ID"
          }
        },
        "required": [
          "id",
          "userId"
        ],
        "additionalProperties": false
      },
      "output": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "prompts": {
            "type": "array",
            "items": {}
          }
        },
        "required": [
          "id",
          "prompts"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "conversation.delete",
